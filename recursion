#include <iostream>
#include <cstring>

using namespace std;

string ReverseRecursion(string, int);
void Swap(char&, char&);
string Reverse(string);

int main()
{
    string source = "12345";
    cout << ReverseRecursion(source, 0) << endl;
    string source1 = "Hello, world!";
    cout << Reverse(source1) << endl;
    return 0;
}

string Reverse(string source) 
{
    for (int i = 0; i < source.length() / 2; i++) {
        Swap(source[i], source[source.length() - i - 1]);
    }

    return source;
}

string ReverseRecursion(string source, int index)
{
    if (index > source.length() / 2)
    {
        return source;
    }
    else
    {
        Swap(source[index], source[source.length() - index - 1]);
        index++;
        return ReverseRecursion(source, index);
    }
}

void Swap(char& first, char& second)
{
    char temp = first;
    first = second;
    second = temp;
}
